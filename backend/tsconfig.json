{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",                    
    "rootDir": "src",                        
    "outDir": "dist",                        
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"]
  },
  "include": ["src"],
  "exclude": [
  "node_modules",  // always exclude dependencies
  "dist",          // exclude compiled output
  "test/**/*" 
]
}
